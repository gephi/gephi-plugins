    <artifactId>scale-plugin</artifactId>
    <version>1.1.0</version>
    <packaging>nbm</packaging>

    <name>scale layout plugin</name>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.netbeans.utilities</groupId>
                <artifactId>nbm-maven-plugin</artifactId>
                <configuration>
                    <licenseName>GPL3.0</licenseName>
                    <author>Huangsong Wei,Imperial College London</author>
                    <authorEmail>weihs1993@qq.com</authorEmail>
                    <authorUrl>https://github.com/weihs/gephi-plugins</authorUrl>
